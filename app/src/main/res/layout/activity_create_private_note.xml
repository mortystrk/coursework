<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_pnote_layout"
        tools:context=".core.CreatePrivateNote">

    <RelativeLayout android:layout_width="330dp" android:layout_height="253dp"
                    android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                    android:layout_marginTop="65dp"
                    android:id="@+id/create_pnote_child_layout"
                    android:background="@drawable/b_rounded_corner"
                    android:translationZ="3dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true" android:layout_marginStart="12dp"
                android:layout_alignParentTop="true" android:id="@+id/et_add_title_pnote"
                android:layout_marginTop="21dp"
                android:textSize="18sp" android:hint="Заголовок..." android:inputType="text|textCapSentences"/>
        <EditText
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:inputType="text|textCapSentences|textMultiLine"
                android:ems="10"
                android:background="@android:color/transparent"
                android:id="@+id/et_note_text_pnote" android:layout_marginTop="17dp"
                android:layout_alignStart="@+id/et_add_title_pnote" android:hint="Текст заметки..."
                android:textSize="16sp"
                android:maxWidth="175dp" android:layout_below="@+id/et_add_title_pnote" android:layout_marginStart="-3dp"/>
    </RelativeLayout>

    <Button
            android:text="Готово"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/b_done_pnote" android:layout_marginBottom="78dp"
            android:background="@drawable/b_rounded_corner"
            android:translationZ="3dp"
            android:textColor="@color/colorTextNonSelected" android:textAllCaps="false" android:textSize="16sp"
            android:fontFamily="sans-serif" android:layout_alignEnd="@+id/create_pnote_child_layout"
            android:layout_marginEnd="-1dp"/>

</RelativeLayout>