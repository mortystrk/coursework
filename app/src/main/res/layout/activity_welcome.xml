<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/welcome_screen"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".core.WelcomeActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="350dp"
                    android:layout_alignParentStart="true" android:layout_alignParentTop="true"
    android:background="@drawable/b_rounded_corner"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:translationZ="10dp">
        <TextView
                android:text="@string/welcome_text"
                android:layout_width="270dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="87dp"
                tools:layout_editor_absoluteX="69dp" android:id="@+id/tv_welocme_text" android:textAlignment="viewStart"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp" android:typeface="normal"
                android:textSize="18sp" android:textColor="@color/colorTextNonSelected" android:textAllCaps="false"
                android:layout_centerHorizontal="true"/>

        <android.support.design.widget.TextInputLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:translationZ="4dp"
                android:elevation="5dp"
                android:layout_alignStart="@+id/tv_welocme_text" android:layout_marginBottom="110dp"
                android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_pass_text" android:singleLine="false" android:inputType="textPassword"
                    android:fontFamily="sans-serif" android:typeface="normal" android:textSize="18sp"
                    android:textColor="@android:color/background_dark"
                    tools:textColorHint="@android:color/darker_gray"
                    android:textColorLink="@android:color/background_light"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:translationZ="4dp"
                android:elevation="5dp"
                android:layout_alignStart="@+id/tv_welocme_text" android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_repeat_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/repeat_pass_text" android:inputType="textPassword"
                    android:fontFamily="sans-serif" android:typeface="normal" android:textSize="18sp"
                    android:textColor="@android:color/background_dark"
                    tools:textColorHint="@android:color/darker_gray"
                    android:textColorLink="@android:color/background_light"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>


    <Button
            android:text="@string/next"
            android:translationZ="4dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/b_start" android:layout_marginBottom="58dp"
            android:textAllCaps="false" android:background="@drawable/b_rounded_corner"
            android:fontFamily="sans-serif" android:typeface="normal" android:textSize="18sp" android:textStyle="bold"/>
</RelativeLayout>