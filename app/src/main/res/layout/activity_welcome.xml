<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/welcome_screen"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".core.WelcomeActivity">

    <TextView
            android:text="@string/welcome_text"
            android:layout_width="270dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="87dp"
            android:translationZ="4dp"
            android:elevation="5dp"
            tools:layout_editor_absoluteX="69dp" android:id="@+id/tv_welocme_text" android:textAlignment="viewStart"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp" android:fontFamily="casual" android:typeface="normal"
            android:textSize="18sp" android:textColor="@android:color/background_light" android:textAllCaps="false"
            android:textStyle="bold" android:layout_alignParentEnd="true" android:layout_marginEnd="56dp"
            android:layout_centerHorizontal="true"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:translationZ="4dp"
            android:elevation="5dp"
            android:layout_alignStart="@+id/tv_welocme_text" android:layout_marginBottom="240dp"
            android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_pass_text" android:singleLine="false" android:inputType="textPassword"
                android:fontFamily="sans-serif" android:typeface="normal" android:textSize="18sp"
                android:textColor="@android:color/background_light"
                tools:textColorHint="@android:color/darker_gray"
                android:textColorLink="@android:color/background_light"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:translationZ="4dp"
            android:elevation="5dp"
            android:layout_alignStart="@+id/tv_welocme_text" android:layout_marginBottom="170dp"
            android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/et_repeat_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/repeat_pass_text" android:inputType="textPassword"
                android:fontFamily="sans-serif" android:typeface="normal" android:textSize="18sp"
                android:textColor="@android:color/background_light"
                tools:textColorHint="@android:color/darker_gray"
                android:textColorLink="@android:color/background_light"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="@string/next"
            android:translationZ="4dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/b_start" android:layout_marginBottom="58dp"
            android:textAllCaps="false" android:elevation="5dp" android:background="@drawable/b_rounded_corner"
            android:fontFamily="casual" android:typeface="normal" android:textSize="18sp" android:textStyle="bold"/>
</RelativeLayout>