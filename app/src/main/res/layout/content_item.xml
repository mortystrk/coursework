<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/b_rounded_corner"
                android:translationZ="5dp">

    <TextView
            android:text="title"
            android:layout_width="228dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="9dp" android:layout_alignParentTop="true" android:id="@+id/tv_title"
            android:layout_marginTop="5dp" android:textSize="16sp" android:fontFamily="sans-serif"
            android:textColor="@color/colorTextNonSelected"
            android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="?attr/colorButtonNormal"
            android:layout_alignParentEnd="true" android:layout_marginEnd="13dp"
            android:layout_alignTop="@+id/tv_title" android:id="@+id/iv_category"
            android:layout_marginBottom="7dp" android:layout_marginTop="38dp"/>
    <TextView
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/tv_date"
            android:layout_marginTop="6dp" android:layout_alignStart="@+id/tv_title"
            android:layout_marginStart="261dp" android:textSize="10sp"/>
    <TextView
            android:text="text"
            android:layout_width="141dp"
            android:layout_height="wrap_content" android:id="@+id/tv_item_text"
            android:layout_alignStart="@+id/tv_title" android:fontFamily="sans-serif" android:textSize="10sp"
            android:layout_alignTop="@+id/iv_category" android:layout_marginStart="1dp"/>
</RelativeLayout>