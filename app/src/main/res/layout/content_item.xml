<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/b_rounded_corner"
                android:translationZ="5dp">

    <TextView
            android:text="title"
            android:layout_width="228dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="9dp" android:layout_alignParentTop="true" android:id="@+id/tv_title"
            android:layout_marginTop="39dp" android:textSize="19sp" android:fontFamily="serif"
            android:textColor="@color/colorTextNonSelected"
            android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="?attr/colorButtonNormal"
            android:layout_alignParentEnd="true" android:layout_marginEnd="8dp"
            android:layout_alignTop="@+id/tv_title" android:id="@+id/iv_category" android:layout_marginTop="-35dp"/>
    <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp" app:srcCompat="@drawable/baseline_edit_white_48"
            android:layout_alignParentEnd="true" android:layout_marginEnd="47dp" android:layout_alignTop="@+id/tv_title"
            android:id="@+id/iv_edit" android:layout_marginTop="11dp" android:background="@drawable/rounded_button" android:layout_marginBottom="5dp"/>
    <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp" app:srcCompat="@drawable/baseline_delete_white_48"
            android:layout_alignParentEnd="true" android:layout_marginEnd="8dp" android:layout_alignTop="@+id/tv_title"
            android:id="@+id/iv_delete" android:layout_marginTop="11dp" android:background="@drawable/rounded_button"/>
    <TextView
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/tv_date"
            android:layout_marginTop="11dp" android:layout_alignStart="@+id/tv_title"/>
</RelativeLayout>