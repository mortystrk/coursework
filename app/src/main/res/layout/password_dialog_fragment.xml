<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/b_rounded_corner">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                    android:background="@drawable/b_rounded_corner"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:translationZ="8dp">
        <TextView
                android:text="Для продолжения необходимо ввести пароль:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" android:id="@+id/tv_password_dialog"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorTextNonSelected" android:textSize="14sp"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_centerHorizontal="true" android:layout_below="@+id/tv_password_dialog"
                android:id="@+id/et_password_dialog" android:inputType="textPassword" android:singleLine="true"
                android:textColor="@color/colorTextNonSelected" android:hint="пароль..." android:textSize="16sp"/>
        <Button
                android:text="Отмена"
                android:layout_width="135dp"
                android:textAllCaps="false"
                android:translationZ="10dp"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:id="@+id/b_back_pass_dialog"
                android:layout_marginTop="89dp" android:layout_alignStart="@+id/tv_password_dialog"
                android:layout_marginBottom="10dp"
                android:background="@drawable/b_rounded_corner"/>
        <Button
                android:text="Далее"
                android:layout_width="135dp"
                android:textAllCaps="false"
                android:translationZ="10dp"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/b_back_pass_dialog"
                android:layout_alignEnd="@+id/et_password_dialog" android:id="@+id/b_ok_pass_dialog"
                android:layout_marginBottom="0dp" android:background="@drawable/b_rounded_corner"/>


    </RelativeLayout>
    </RelativeLayout>